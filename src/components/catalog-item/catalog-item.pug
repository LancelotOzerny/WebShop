mixin catalog-item(image_src, modifiers = '', price, old_price = null, title = '', progress=null, reviews_count=null)
    - modifiers += ' catalog-item'

    article(class=modifiers)
        a(href='#')
            header
                img(src=image_src)
                button.favourite.active
                button.show
                a.btn.catalog-item__add-to-card Add To Cart

        a(href='#').catalog-item__title!= title

        footer
            .catalog-item__price!= price
            - if (old_price)
                .catalog-item__old-price!= old_price
            - if (progress !== null)
                +rating(progress, reviews_count)