mixin timer(modifiers='default')
    div(class='timer ' + modifiers)
        .timer__item
            p.timer__item-title Days
            p.timer__item-time 03

        .timer__item
            p.timer__item-title Hours
            p.timer__item-time 23

        .timer__item
            p.timer__item-title Minutes
            p.timer__item-time 19

        .timer__item
            p.timer__item-title Seconds
            p.timer__item-time 56